    <!-- Throttle interval (minimum time between launches) -->
    <key>ThrottleInterval</key>
    <integer>60</integer>
    
    <!-- Additional launchd options for reliability -->
    <key>ProcessType</key>
    <string>Background</string>
    
    <!-- Enable low priority I/O -->
    <key>LowPriorityIO</key>
    <true/>
    
    <!-- Abandon process group -->
    <key>AbandonProcessGroup</key>
    <true/>
</dict>
