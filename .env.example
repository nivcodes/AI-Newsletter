# AI Newsletter Generator Configuration

# === EMAIL CONFIGURATION ===
EMAIL_FROM=your-email@example.com
EMAIL_TO=recipient@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=465
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-app-password

# === LLM CONFIGURATION ===
# Use external LLMs (set to "true" to enable)
USE_EXTERNAL_LLM=false

# Preferred LLM: transformer, local, openai, anthropic, aws-anthropic
PREFERRED_LLM=transformer

# Use transformer models (free, default)
USE_TRANSFORMER=true
TRANSFORMER_MODEL=facebook/bart-large-cnn

# === OPENAI CONFIGURATION ===
OPENAI_API_KEY=your-openai-api-key

# === ANTHROPIC CONFIGURATION ===
ANTHROPIC_API_KEY=your-anthropic-api-key

# === AWS BEDROCK CONFIGURATION (for Anthropic via AWS) ===
USE_AWS_BEDROCK=false
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# === NEWSLETTER SETTINGS ===
MAX_ARTICLES=12
DELAY_BETWEEN_SUMMARIES=2
